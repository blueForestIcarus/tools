#!/bin/bash
#index
ROOT=/usr/var/local/tools
mkdir -p $ROOT
if ! [ -z "$2" ]; then
	echo "setting $1 to $2"
    awk -v val="$1" '$1!=val' $ROOT/index > $ROOT/index.new
	echo "$1	`realpath $2`" >> $ROOT/index.new
    mv $ROOT/index.new $ROOT/index	
elif [ -z "$1" ]; then
	cat $ROOT/index
	exit 0
fi

awk -v val="$1" '$1==val' $ROOT/index | cut -f2 
