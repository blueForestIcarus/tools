#!/bin/bash
#index
ROOT=/usr/var/local/tools
mkdir -p $ROOT
if ! [ -z "$2" ]; then
	echo "setting $1 to $2"
	echo $1 >> $ROOT/index
	echo $1 >> $ROOT/index
	cat $ROOT/index | sort | rev | uniq -f 1 | rev > $ROOT/index
	echo "$1	`realpath $2`" >> $ROOT/index	
elif [ -z "$1" ]; then
	cat $ROOT/index
	exit 0
fi


cat $ROOT/index | grep $1 | cut -f2
