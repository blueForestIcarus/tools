#!/bin/bash

if [[ $1 =~ ^#.* ]]; then
    TEXT=$1
else
    TEXT=`xgetres $1`
fi

hex2rgb() {
    hex=$(echo "${1^^}" | sed 's/#//g')

    a=$(echo $hex | cut -c-2)
    b=$(echo $hex | cut -c3-4)
    c=$(echo $hex | cut -c5-6)

    r=$(echo "ibase=16; $a" | bc)
    g=$(echo "ibase=16; $b" | bc)
    b=$(echo "ibase=16; $c" | bc)
}

hex2rgb $TEXT

if [ "$2" == "-n" ]; then
    printf "\x1b[48;2;%s;%s;%sm%s\x1b[0m" $r $g $b " $TEXT "
else
    printf "\x1b[48;2;%s;%s;%sm%s\x1b[0m" $r $g $b " $TEXT "
fi
