#!/bin/bash
#inteligently start vim
APP=nvim
PIPE=
while [ ! -z "$1" ]; do
    case "$1" in
        \\* )
            APP=${1:1}
            shift
            break;;
        //* )
            APP=/${1:2}
            shift
            break;;
        -- )
            PIPE=TRUE;;
        * )
            break;;
    esac
    shift
done

APP=${VVIM_APP-$APP}
CLASS=${VVIM_CLASS-vvim}
NAME=${VVIM_NAME-$APP}

if [ -t 0 ]; then
    #in a terminal
    if [ "$TERM" = "xterm-kitty" ] ; then 
        source /usr/var/local/tools/root/bin/source/vim.sh
        no_padding $APP $@
    else
        $APP $@
    fi
else
    #not in a terminal
    if [ ! -z "$DISPLAY" ]; then 
        if [ ! -z "$PIPE" ]; then 
            pipe=`mktemp`
            cat > $pipe
            kitty --class $CLASS --name $NAME -o window_padding_width=0 -o background_opacity=1 bash -c "$APP $@ < $pipe"
            rm "$pipe"
        else
            kitty --class $CLASS --name $NAME -o window_padding_width=0 -o background_opacity=1 bash -c "$APP $@"
        fi
    else 
        exit 1
    fi
fi

